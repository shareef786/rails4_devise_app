<div id="chart-container" style="width: 800px;height: 400px;"></div>
<%= react_component('Books', { data: @books })%>
<script type="text/javascript">
  $(function (){
     new Highcharts.Chart({
         chart: {
             renderTo: "chart-container"
         },
         title: {
             text: "books by date"
         },
         xAxis: {
             type: "datetime"
         },
         yAxis: {
             title: {
                 text: "Dollars"
             }
         },
         tooltip: {
             formatter: function(){
           return Highcharts.dateFormat("%B %e, %Y", this.x) + ": " + "$" + Highcharts.numberFormat(this.y, 2);
             }
         },
         series: [{
             name: 'Books',
             pointInterval: <%= 1.day * 1000 %>,
             pointStart: <%= 3.weeks.ago.to_i * 1000 %>,
             data: <%= @data %>
         }]
     })
  });
</script>